<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/sName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Student  name"
        android:textSize="16dp"
        android:background="#11000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary" />



    <EditText
        android:id="@+id/sFathersName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="fathers name"
        android:textSize="16dp"
        android:background="#11000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:layout_below="@+id/sName"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary" />


    <EditText
        android:id="@+id/sAdmNo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Admission  Number"
        android:textSize="16dp"
        android:background="#11000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:layout_below="@+id/sFathersName"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary" />


    <EditText

        android:id="@+id/sDateOfBirth"
        android:clickable="true"
        android:editable="false"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Date of Birth"
        android:textSize="16dp"
        android:background="#11000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:layout_below="@+id/sAdmNo"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary"/>

